{
    "manifest_version": 3,
    "name": "GMU RMP Rating",
    "version": "1.0",
    "description": "View RMP ratings on PatriotWeb",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    "action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "*://patriotweb.gmu.edu/*",
        "*://ssbstureg.gmu.edu/*",
        "*://example.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://ssbstureg.gmu.edu/StudentRegistrationSsb/ssb/classSearch/classSearch*"],
            "js": ["jquery-3.7.1.slim.min.js", "content.js"],
            "css": ["content.css"]
        }
    ],
    "permissions": [
        "scripting"
    ]
}
